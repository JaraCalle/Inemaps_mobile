<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VAMOS.src.Tabbed.DetailPage"
             BackgroundImageSource="Background_index">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Inemaps" TextColor="White"
                   FontFamily="Peasone" 
                   FontSize="50"
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" 
                   Margin="0,15,0,0"/>
            <Frame Padding="0"
                   CornerRadius="10"
                   Margin="30,10,30,10"
                   >
            <Image x:Name="ImgBloque"/>
            </Frame>
            <Label x:Name="LabelName"
                   FontSize="Large"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="#E7EBDA" 
                   FontFamily="Roboto_regular"
                   />
            <Label x:Name="LabelPrice"
                   FontSize="Large"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="#E7D3AF" 
                   FontFamily="Roboto_light"
                   />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>